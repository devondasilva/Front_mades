{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["dom","ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-native", 

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "exclude": [
    "vite.config.js", // Ou supprimez-le d'ici s'il était déjà exclu
    // ... tous les autres fichiers que vous souhaitez exclure
  ]
}
